doctype html
html(lang="en")
  head
    include header

  body.sub-page
    nav
      include ./top-page-menu

    scroll-foam
      main
        content-container
          block content

      footer
        include ./footer-section
    script.
      if([
        'iPad Simulator',
        'iPhone Simulator',
        'iPod Simulator',
        'iPad',
        'iPhone',
        'iPod'
      ].includes(navigator.platform)) {
        document?.body.classList.add('ios')
      }
